<% if @user.errors.any? %>
 <div class="alert alert-danger">
  <%= @user.errors.count %>件のエラーが発生しました</br>
  <% @user.errors.full_messages.each do |message| %>
    <%= message %></br>
  <% end %>
 <% end %>
</div>

<div class="container">
 <h4 class="title-center">ログイン</h4>
  <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
 <div class="row justify-content-center">
  <div class="col-md-4">

   <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
   </div>

   <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
   </div>

    <% if devise_mapping.rememberable? %>
     <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :ログイン状態を保存する %>
     </div>
    <% end %>

   <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary w-100", style: "margin-bottom: 30px;" %>
   </div>
   <% end %>

  </div>


 </div>
</div>

<h6 class="text-center">
    新規登録は<%= link_to "こちら", new_user_registration_path %>へ
</h6>

