
<% if user_signed_in? %>
<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @follow_users.count %>
    </strong>
    フォロー
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @follower_users.count %>
    </strong>
    フォロワー
  </a>
</div>

<% else %>
<% @user ||= current_user %>
<div class="stats">

    <strong id="following" class="stat">
      <%= @follow_users.count %>
    </strong>
    フォロー


    <strong id="followers" class="stat">
      <%= @follower_users.count %>
    </strong>
    フォロワー

</div>
<% end %>