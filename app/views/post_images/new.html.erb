<% if flash[:alert] %>
  <div class="alert alert-danger">
   <%= flash[:alert]%>
  </div>
<% end %>

<div class="container">
 <h4 class="title-center">サウナ飯投稿</h4>
  <%= form_with model: @post_image, local:true do |f| %>
  <div class="row justify-content-center">
   <div class="col-md-7">
    <table class="table">
     <tr>
      <th><%= f.label :投稿写真　%></th>
      <td><%= f.attachment_field :image %></td>
     </tr>
     <tr>
      <th><%= f.label :サウナ施設名　%></th>
      <td><%= f.collection_select :sauna_facility_id, SaunaFacility.all, :id, :name, size: "50"  %></td>
     </tr>
     <tr>
       <th><%= f.label :説明 %></th>
       <td><%= f.text_area :caption, rows: "6", cols: "40" %></td>
     </tr>
    </table>

    <div class="text-center">
      <%= f.submit '投稿', class: 'btn btn-primary w-50' %>
    </div>
   </div>
  </div>
  <% end %>
</div>