<% if flash[:success] %>
  <div class="alert alert-success">
   <%= flash[:success]%>
  </div>
<% end %>

<div class="show-sauna-main">
   <div class="container">
     <h4 class="show-sauna-name"><%= @sauna_facility.name %></h4>
      <div class="review-list">
        <span id="star-score-<%= @sauna_facility.id %>"></span>
         <%= @review_average %>
         <div class="review-mark">
          <%= link_to(sauna_facility_reviews_path(@sauna_facility.id))  do %>
           <i class="fas fa-comment-dots"><%= @reviews.count %></i>
          <% end %>
         </div>
      </div>
      <nav class="nav-list">
        <ul class="link-list">
        <li class="link-item">
          <%= link_to(sauna_facility_path(@sauna_facility.id), style: "color:black") do %>
            <div class="link-name"><i class="fas fa-home">トップ</i></div>
          <% end %>
        </li>
        <li class="link-item">
          <%= link_to(sauna_facility_reviews_path(@sauna_facility.id), style: "color:black") do %>
           <div><i class="fas fa-comment-dots">口コミ</i></div>
          <% end %>
        </li>
        <li class="link-item">
          <%= link_to(sauna_facility_foods_path(@sauna_facility.id), style: "color:black") do %>
           <div><i class="fas fa-utensils">サウナ飯</i></div>
          <% end %>
        </li>
        <li class="link-item">
          <%= link_to(map_path(id: @sauna_facility.id), style: "color:black") do %>
          <div><i class="fas fa-map-marker-alt">地図</i></div>
          <% end %>
        </li>
        </ul>
      </nav>
    </div>
  </div>

        <script>
          $(function(){
          $('#star-score-<%= @sauna_facility.id %>').raty({
          size     : 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf: '<%= asset_path('star-half.png') %>',
          scoreName: 'review[score]',
          half: true,
          readOnly: true,
          score: <%= @review_average %>,
          });
          });
         </script>
